<ul>
  <li><%= @flight.from_airport.airport_code %></li>
  <li><%= @flight.to_airport.airport_code %></li>
  <li><%= @flight.start_time %></li>
</ul>

<%= form_for(@booking) do |f| %>
<%= f.fields_for :passengers do |pass_form| %>
    <li>
      <%= pass_form.label :name %>
      <%= pass_form.text_field :name %>
    </li>

    <li>
      <%= pass_form.label :email %>
      <%= pass_form.text_field :email %>
    </li>
  <% end %>
  <%= f.hidden_field :flight_id, value: @flight.id %>
  <%= f.submit "Book" %>
<% end %>
