<%= form_tag(flights_path, method: "get") do %>
  <%= label_tag(:from_airport_id, "From") %>
  <%= select_tag(:from_airport_id, options_for_select(@airport_options, @selected_from_airport)) %>

  <%= label_tag(:to_airport_id, "To") %>
  <%= select_tag(:to_airport_id, options_for_select(@airport_options, @selected_to_airport)) %>

  <%= label_tag(:passengers, "Passengers") %>
  <%= select_tag(:passengers, options_for_select(@passenger_options, @selected_passengers)) %>

  <%= label_tag(:date, "To") %>
  <%= select_tag(:date, options_for_select(@date_options, @selected_date)) %>

  <%= submit_tag("Search") %>
<% end %>

<% if @flights %>
  <%= form_tag(new_booking_path, method: "get") do %>
    <% @flights.each do |flight| %>
      <%= radio_button_tag(:flight_id, flight.id) %>
      <%= label_tag(:flight_id, "#{flight.start_time}") %>
    <% end %>
    <%= hidden_field_tag(:passengers, @selected_passengers) %>
    <%= submit_tag("Confirm") %>
  <% end %>
<% end %>
